var unfol_id = $("#unfollow-button");
	unfol_id.removeClass("btn unfollow-button");
	unfol_id.addClass("btn follow-button");
	unfol_id.attr("href", "/<%= @user.user_name %>/follow_user");
	unfol_id.attr("id", "follow-button");
	unfol_id.text('Follow');

$(".flw").html("<%= j link_to @user.followers.count, '#', class: 'flw'%> ");
$(".flwng").html("<%= j link_to @user.following.count, '#', class: 'flwng'%> ");
$(".post_counter").html("<%= j link_to @user.posts.count, '#', class: 'post_counter'%> ");

